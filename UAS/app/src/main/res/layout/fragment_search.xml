<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search.SearchFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardView2"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="28dp"
        tools:ignore="UseCompoundDrawables">


        <TextView

            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search1"
            android:textColor="#050505"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.362"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="42dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="567dp"
            android:background="#D7E3ED"
            android:orientation="vertical"
            android:padding="28dp">


            <ImageView

                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                android:contentDescription="@string/imagelogo"
                android:gravity="center"
                android:src="@drawable/biru_dan_kuning_ilustrasi_imut_modern_logo_bimbingan_belajar__1__removebg_preview2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/white_background"

                android:orientation="horizontal"
                app:cardCornerRadius="42dp">

                <EditText
                    android:id="@+id/searchinput"
                    android:layout_width="297dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_background"
                    android:ems="55"
                    android:hint="@string/masukkan_nama_buku1"
                    android:inputType="text"
                    android:padding="15dp"
                    android:paddingStart="15dp"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.516"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
                    tools:ignore="RtlSymmetry"
                    android:autofillHints="" />

                <ImageView
                    android:id="@+id/search2"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search"
                    android:contentDescription="@string/searchicon"
                    android:padding="12dp" />


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>